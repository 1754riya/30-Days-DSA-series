class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int minPrice = prices[0];
        int maxPrice = 0;
        int n = prices.size();

        for (int i = 1; i < n; i++) {
            int currentPrice = prices[i];
            int profit = currentPrice - minPrice;
            maxPrice = max(maxPrice, profit);
            minPrice = min(minPrice, currentPrice);
        }

        return maxPrice;
    }
};
